{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^values.yaml$"],
      "matchStrings": [
        "site:\n\w*version: (?<currentValue>.*)$
      ],
      "depNameTemplate": "WordPress/WordPress",
      "datasourceTemplate": "github-releases"
    }
  ]
}
